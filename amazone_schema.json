customers{
    "_id": "int",
    "name": "text",
    "gender": "text",
    "age": "int",
    "billing_address": {
        "house_number": "text",
        "street": "text",
        "city": "text",
        "postcode": "text",
        "country": "text",
    },
    "shipping_address": {
        "house_number": "text",
        "street": "text",
        "city": "text",
        "postcode": "text",
        "country": "text",
    },
    "customer_credit": "float"
}

past_orders{
    "_id": "text",
    "items": [
        {
            "product_id": ref <products._id> "int",
            "product_name": ref <products.product_name> "text",
            "quantity": "int",
        },
        //Additional Documents ...
    ],
    "segment": "text", // others or fresh
    "total_amount": "float", // total_amount = quantity of product * price of product
    "customer_id": ref <customers._id>"int",
    "status": "text", //Always Delivered
    "payment_timestamp": "date time format"
}

current_orders{
    "_id": "int",
    "items": [
        {
            "product_id": ref <products._id> "int",
            "product_name": ref <products.product_name> "text",
            "quantity": "int",
        },
        //Additional Documents ...
    ],
    "segment": "text", //
    "total_amount": "int",
    "customer_id": ref <customers._id> "int",
    "status": "text", // following can be used [In Cart, Paid]
    "payment_timestamp": "date time format" //this will only be displayed once a payment is made
}

stores{
    "_id": "int", // Autogenerated Globally Unique ID
    "store_name": "text", // Morrisons + Street Name
    "store_address": {
        "building_number": "text",
        "street": "text",
        "city": "text",
        "postcode": "text",
        "country": "text",
    }, // Address of the store
    "location": [ "numeric", "numeric" ], // Latitude, Longitude
    "grocery_items": [
        {
            "product_id": ref <products._id> "int",
            "product_name": ref <products.product_name> "text",
        },
    ] // Array of products available in the store
}

partners{
    "_id": "int", // Autogenerated Globally Unique ID
    "partner_name": "text", // Full Name of the partner
    "partner_age": "int", // Age of the partner (>19)
    "status": "boolean", // 0 for Inactive or 1 for Active
    "current_location": [ "numeric", "numeric" ], // Latitude, Longitude
    "on_delivery": "boolean", // 0 for Idle or 1 for on delivery
    "order_id": ref <current_orders._id> "int", // Order ID of the order being delivered
    "payout": "int", // Fixed amount paid to the delivery partner 
}


Product{
    "_id": "int",
    "segment": "string", //["Fresh"]
    "category": "string", //["bakery", "drinks", "fruits and vegetables"]
    "product_name": "string",
    "description": "string",
    "product_dimension_lwh" : "string",
    "product_weight_kg": "int", //This field is to be called product_quantity_l for drinks
    "expiry_date_ddmmyyyy": "dateformat",
    "country_of_origin": "string",
    "standard_price_to_customers": "float",
    "cost_of_products_from_morrizon": "float",
    "nearest_store_id": ref <stores._id>
}

